    <Grid>
        <Grid Margin="164,8,10,0" DataContext="{Binding Playlists.CurrentItem}" Height="108" VerticalAlignment="Top" IsEnabled="{Binding Converter={x:Static ObjectConverters.IsNotNull}, Mode=OneWay}">
            <ListBox x:Name="FoldersList" Margin="0,23,0,0" Items="{Binding Folders}" TabIndex="5" Background="{x:Null}" />
            <TextBlock HorizontalAlignment="Left" Margin="0,4,0,0" Text="Folders" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox x:Name="PlaylistNameTextBox" HorizontalAlignment="Left" Height="21" Margin="80,0,0,0" VerticalAlignment="Top" Width="120" Text="{Binding Name, Mode=TwoWay}" TabIndex="4" Background="{x:Null}"/>
            <!-- UpdateSourceTrigger=PropertyChanged -->
            <Button x:Name="AddFolderButton" Content="Add" HorizontalAlignment="Right" Margin="0,-1,80,0" VerticalAlignment="Top" Width="75" TabIndex="6" Command="{Binding AddFolderCommand, Mode=OneWay}"/>
            <Button x:Name="RemoveFolderButton" Content="Remove" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" TabIndex="7" Command="{Binding RemoveFolderCommand, Mode=OneWay}" Margin="0,-1,0,0"/>
        </Grid>
        <ListBox x:Name="PlaylistsList" HorizontalAlignment="Left" Margin="10,34,0,51" Width="146" Items="{Binding Playlists}" TabIndex="1" Background="{x:Null}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}">
                        <Interaction.Behaviors>
                            <BehaviorCollection>
                                <EventTriggerBehavior EventName="DoubleTapped">
                                    <InvokeCommandAction Command="{Binding DataContext.PlayCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" />
                                </EventTriggerBehavior>
                            </BehaviorCollection>                            
                        </Interaction.Behaviors>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock HorizontalAlignment="Left" Margin="10,12,0,0" Text="Playlists" VerticalAlignment="Top" FontWeight="Bold" Height="16" Width="46"/>
        <Button x:Name="AddPlaylistButton" Content="Add" HorizontalAlignment="Left" Margin="66,7,0,0" VerticalAlignment="Top" Width="50" TabIndex="2" Command="{Binding AddPlaylistCommand}" Height="22" />
        <Button x:Name="RemovePlaylistButton" Content="Del" HorizontalAlignment="Left" Margin="121,7,0,0" VerticalAlignment="Top" Width="34" TabIndex="3" Command="{Binding DeletePlaylistCommand}" Height="22" />
        <Grid Height="43" VerticalAlignment="Bottom" Grid.ColumnSpan="2"
              DataContext="{x:Static local:ViewModelLocator.Player}">
            <ui:MediaPlayer IsLoopVisible="False" IsSpeedVisible="False" >
                <bass:BassPlayerHost Source="{Binding Player.NowPlaying, Mode=OneWay}" Title="{Binding Player.NowPlayingTitle, Mode=TwoWay}" 
                    Volume="{Binding DataContext.Volume, ElementName=UI, Mode=TwoWay}" Pitch="0.98181818181818181" />
                <!-- StopCommandExecuted="{wpf:MethodBinding MediaFinished}" -->
                <!-- MediaFinished="{wpf:MethodBinding MediaFinished}" -->
            </ui:MediaPlayer>
        </Grid>
        <Grid Margin="164,120,10,54" DataContext="{x:Static local:ViewModelLocator.FilesList}">
            <ListBox x:Name="FilesList" Margin="0,24,0,0" Items="{Binding Files}" TabIndex="8" Background="{x:Null}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}">
                            <Interaction.Behaviors>
                                <BehaviorCollection>
                                    <EventTriggerBehavior EventName="DoubleTapped">
                                        <InvokeCommandAction Command="{Binding DataContext.PlayCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" />
                                    </EventTriggerBehavior>
                                </BehaviorCollection>                            
                            </Interaction.Behaviors>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Text="Files" FontWeight="Bold"/>
            <Button x:Name="PlayButton" Content="Play" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" TabIndex="9" Command="{Binding PlayCommand}"/>
        </Grid>
    </Grid>
</Window>
