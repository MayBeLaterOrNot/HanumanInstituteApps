<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:HanumanInstitute.NaturalGroundingPlayer"
             xmlns:ui="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:naturalGroundingPlayer="clr-namespace:HanumanInstitute.NaturalGroundingPlayer"
             x:Class="HanumanInstitute.NaturalGroundingPlayer.App">
    <Application.DataTemplates>
        <naturalGroundingPlayer:ViewLocator />
    </Application.DataTemplates>
    <Application.Styles>
        <ui:FluentAvaloniaTheme PreferSystemTheme="False" CustomAccentColor="#0a9648" />
        <StyleInclude Source="avares://HanumanInstitute.Apps/Styles/CommonStyles.axaml" />
    </Application.Styles>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://HanumanInstitute.Apps/Styles/CommonResources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>