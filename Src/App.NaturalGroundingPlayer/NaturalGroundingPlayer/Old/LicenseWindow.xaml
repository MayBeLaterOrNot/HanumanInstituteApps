<Window x:Class="NaturalGroundingPlayer.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NaturalGroundingPlayer"
        mc:Ignorable="d"
        Title="BSD License" Height="333.548" Width="526.308" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid Style="{DynamicResource GradiantBackground}">
        <TextBox x:Name="LicenseText" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" Margin="0,0,0,33" VerticalScrollBarVisibility="Visible" Background="{x:Null}" />
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Right" Margin="0,0,10,8" VerticalAlignment="Bottom" Width="90" IsCancel="True" IsDefault="True" Click="CloseButton_Click"/>

    </Grid>
</Window>
